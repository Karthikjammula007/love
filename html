    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const heart = document.querySelector(".heart");
            const content = document.querySelector(".content");
            const valentineText = document.getElementById("valentineText");

            setTimeout(() => {
                heart.style.transform = "translate(-50%, -50%) scale(0.5)";
                heart.style.opacity = "0";
            }, 500);

            setTimeout(() => {
                content.style.opacity = "1";
                valentineText.style.opacity = "1";
            }, 2000);
        });

        document.getElementById("yesBtn").addEventListener("click", () => {
            const happyMsg = document.getElementById("happyMsg");
            happyMsg.style.display = "block";
            happyMsg.style.opacity = "0";
            happyMsg.style.transition = "opacity 1s ease-in-out";

            setTimeout(() => {
                happyMsg.style.opacity = "1";

                // Try opening Instagram using the intent (best for Android)
                setTimeout(() => {
                    window.location.href = "intent://www.instagram.com/its._.atlaac/#Intent;package=com.instagram.android;scheme=https;end;";
                }, 1000);

                // Fallback to web version if Instagram app doesnâ€™t open
                setTimeout(() => {
                    window.location.href = "https://www.instagram.com/its._.atlaac?igsh=MXVocDltNGQzZG5ocA==";
                }, 3000);

            }, 100);
        });

        function moveButton() {
            const noBtn = document.getElementById("noBtn");
            const maxX = window.innerWidth - noBtn.clientWidth - 20;
            const maxY = window.innerHeight - noBtn.clientHeight - 20;
            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;

            noBtn.style.position = "absolute";
            noBtn.style.transition = "left 0.3s ease-in-out, top 0.3s ease-in-out";
            noBtn.style.left = randomX + "px";
            noBtn.style.top = randomY + "px";
        }

        document.getElementById("noBtn").addEventListener("mouseover", moveButton);
        document.getElementById("noBtn").addEventListener("touchstart", moveButton);
    </script>
